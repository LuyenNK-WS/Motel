<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa tài khoản"
        android:textSize="30sp"
        style="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/edtFullName"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Họ tên"
        android:padding="8dp"
        android:inputType="text"
        android:background="@drawable/bg_cruved_strock_green1"/>

    <EditText
        android:id="@+id/edtIDCard"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Chứng minh thư/ thẻ căn cước số"
        android:padding="8dp"
        android:inputType="number"
        android:background="@drawable/bg_cruved_strock_green1"/>

    <EditText
        android:id="@+id/edtAddress"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Địa chỉ"
        android:padding="8dp"
        android:inputType="text"
        android:background="@drawable/bg_cruved_strock_green1"/>

    <EditText
        android:id="@+id/edtJob"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Nghề nghiệp"
        android:padding="8dp"
        android:inputType="text"
        android:background="@drawable/bg_cruved_strock_green1"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Địa chỉ email"
        android:padding="8dp"
        android:inputType="text"
        android:background="@drawable/bg_cruved_strock_green1"/>

    <EditText
        android:id="@+id/edtNameUse"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Tên tài khoản"
        android:padding="8dp"
        android:inputType="text"
        android:background="@drawable/bg_cruved_strock_green1"/>

    <EditText
        android:id="@+id/edtPassWord"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Mật khẩu"
        android:padding="8dp"
        android:inputType="number"
        android:background="@drawable/bg_cruved_strock_green1"/>

    <EditText
        android:id="@+id/edtPhoneNumber"
        android:layout_marginTop="8dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Số điện thoại"
        android:padding="8dp"
        android:inputType="number"
        android:background="@drawable/bg_cruved_strock_green1"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textAllCaps="false"
            android:background="@drawable/bg_cruved_strock_green1"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_marginLeft="50dp"
            android:textAllCaps="false"
            android:background="@drawable/bg_cruved_strock_green1"
            android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>