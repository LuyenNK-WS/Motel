<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlue300">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_back"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="10dp"
                android:text="Thêm phòng"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Tên phòng"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtNameRoom"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_cruved_strock_green1"
            android:gravity="center"
            android:inputType="text"
            android:text="P101" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Diện tích phòng"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtAcreage"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_cruved_strock_green1"
            android:gravity="center"
            android:inputType="text"
            android:text="30 m2" />


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Giá phòng"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtPriceRoom"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_cruved_strock_green1"
            android:gravity="center"
            android:inputType="text"
            android:text="2500000" />


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ngày làm hợp đồng"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtStatus"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_cruved_strock_green1"
            android:gravity="center"
            android:text="Trống"
            android:inputType="text"/>

        <Button
            android:id="@+id/btnCreateRoom"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_cruved_strock_green1"
            android:text="Thêm phòng"
            android:textAllCaps="false"
            android:textSize="25sp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

