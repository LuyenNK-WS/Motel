<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/itemBill"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@drawable/bg_rectangular_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtNameRoom"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_room_default"
            style="@style/TextAppearance.AppCompat.Large"
            android:textSize="25sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price_default"
            style="@style/TextAppearance.AppCompat.Large"
            android:textSize="25sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày chốt: 19/20/2019"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

</LinearLayout>